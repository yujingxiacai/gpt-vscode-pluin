{
	"$schema": "https://docs.rome.tools/schemas/12.1.0/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useBlockStatements": "error",
				"noImplicitBoolean": "error"
			}
		},
		"ignore": ["**/.umi*", "**/__tests__/**"]
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"lineWidth": 100,
		"indentStyle": "tab",
		"indentSize": 4,
		"ignore": []
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingComma": "all",
			"semicolons": "always"
		}
	}
}
